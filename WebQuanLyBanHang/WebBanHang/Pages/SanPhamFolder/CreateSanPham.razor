        margin-bottom: 20px;
    }

    .form-check-input {
        margin-left: 0;
        margin-right: 10px;
    }

    .btn-primary {
        border-radius: 5px;
    }

    .btn-secondary {
        border-radius: 5px;
    }

    .form-control {
